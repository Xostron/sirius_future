{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost"],
		"module": "ES6",
		"jsx": "react-jsx",
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "Node",
		"useDefineForClassFields": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@page/*": ["./src/page/*"],
			"@cmp/*": ["./src/cmp/*"],
			"@store/*": ["./src/store/*"],
			"@static/*": ["./static/*"],
			"@src/*": ["./src/*"],
			"@font/*": ["./public/fonts/*"],
			"@tool/*": ["./src/tool/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
